{% extends 'shop/layout.html.twig' %}

{% block shop_content %}
    
    <header class="ml-4">
        <h1>{{ product.name }}</h1>
    </header>
    <div class="border-bottom my-4"></div>
    <div class="row">
        <div class="col-md-4">
            {% set cover = product.images|first %}
            <div class="image-container">
                <img src="/img/upload/{{ cover.name }}" alt="{{ cover.description }}" class="img img-fluid product-image">
            </div>
            {% if product.images.count > 1 %}
                <div class="d-flex mt-2">
                {% for image in product.images[1:] %}
                    <div class="mr-2 image-container w-50">
                        <img src="/img/upload/{{ image.name }}" alt="{{ image.description }}" class="img img-fluid product-image">
                    </div>
                {% endfor %}
                </div>
            {% endif %}
        </div>
        <div class="col-12 col-md-8">
            <div class="row col-12 mt-md-0 mt-2">
                {{ product.description }}
            </div>
            <div class="row mt-4 d-flex flex-column align-items-end">
                <p class="product-buy__price font-weight-bold">{{ product.price }} â‚¬</p>
                {% if product.hasStock %}
                    <a href="/basket/add/{{ product.id }}" class="btn btn-primary">Ajouter au panier</a>
                {% else %}
                    <a href="#" class="btn btn-secondary disabled">Rupture de stock</a>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
