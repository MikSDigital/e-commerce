{% extends 'shop/layout.html.twig' %}
{% block title %}Home{% endblock title %}

{% block shop_content %}

<h2>Nouveautés</h2>
<div class="row">
    {% for product in products %}
        <div class="col-md-4">
            <article class="product-card card border-0">
                {% set thumb = product.images|first %}
                <div class="image-container">
                    <a href="/product/{{ product.id }}">
                        <img src="/img/upload/{{ thumb.name }}" alt="{{ thumb.description }}" class="product-card__image img img-fluid">
                    </a>
                </div>
                <div class="card-body">
                    <h4 class="product-card__heading">
                        <a href="/product/{{ product.id }}" class="product-card__link">
                            {{ product.name }}
                        </a>
                    </h4>
                    <div class="divider mb-2"></div>
                    <div class="product-card__price text-right">{{ product.price }} €</div>
                </div>
            </article>
        </div>
    {% endfor %}
</div>

{% endblock %}
